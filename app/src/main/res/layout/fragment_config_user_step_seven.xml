<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Ảnh của tôi"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/listImage"
        app:layout_constraintTop_toTopOf="parent" />


    <GridLayout
        android:id="@+id/listImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:columnCount="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <com.ritesh.ratiolayout.RatioRelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:layout_margin="5dp"
            app:fixed_attribute="WIDTH"
            app:horizontal_ratio="1"
            app:vertical_ratio="1">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/imageView_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_dash"
                    android:contentDescription="image"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_plus" />

                <ImageView
                    android:id="@+id/cancel_1"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="4dp"
                    app:srcCompat="@drawable/ic_cancel" />

            </androidx.cardview.widget.CardView>
        </com.ritesh.ratiolayout.RatioRelativeLayout>

        <com.ritesh.ratiolayout.RatioRelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="5dp"
            android:gravity="center"
            app:fixed_attribute="WIDTH"
            app:horizontal_ratio="1"
            app:vertical_ratio="1">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/imageView_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_dash"
                    android:contentDescription="image"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_plus" />

                <ImageView
                    android:id="@+id/cancel_2"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="4dp"
                    app:srcCompat="@drawable/ic_cancel" />
            </androidx.cardview.widget.CardView>
        </com.ritesh.ratiolayout.RatioRelativeLayout>

        <com.ritesh.ratiolayout.RatioRelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="5dp"
            android:gravity="center"
            app:fixed_attribute="WIDTH"
            app:horizontal_ratio="1"
            app:vertical_ratio="1">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/imageView_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_dash"
                    android:contentDescription="image"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_plus" />

                <ImageView
                    android:id="@+id/cancel_3"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="4dp"
                    app:srcCompat="@drawable/ic_cancel" />
            </androidx.cardview.widget.CardView>
        </com.ritesh.ratiolayout.RatioRelativeLayout>

        <com.ritesh.ratiolayout.RatioRelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="5dp"
            android:gravity="center"
            app:fixed_attribute="WIDTH"
            app:horizontal_ratio="1"
            app:vertical_ratio="1">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/imageView_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_dash"
                    android:contentDescription="image"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_plus" />

                <ImageView
                    android:id="@+id/cancel_4"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="4dp"
                    app:srcCompat="@drawable/ic_cancel" />
            </androidx.cardview.widget.CardView>
        </com.ritesh.ratiolayout.RatioRelativeLayout>

        <com.ritesh.ratiolayout.RatioRelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="5dp"
            android:gravity="center"
            app:fixed_attribute="WIDTH"
            app:horizontal_ratio="1"
            app:vertical_ratio="1">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/imageView_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_dash"
                    android:contentDescription="image"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_plus" />

                <ImageView
                    android:id="@+id/cancel_5"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="4dp"
                    app:srcCompat="@drawable/ic_cancel" />
            </androidx.cardview.widget.CardView>
        </com.ritesh.ratiolayout.RatioRelativeLayout>

        <com.ritesh.ratiolayout.RatioRelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="5dp"
            android:gravity="center"
            app:fixed_attribute="WIDTH"
            app:horizontal_ratio="1"
            app:vertical_ratio="1">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/imageView_6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_dash"
                    android:contentDescription="image"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_plus" />

                <ImageView
                    android:id="@+id/cancel_6"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="4dp"
                    app:srcCompat="@drawable/ic_cancel" />
            </androidx.cardview.widget.CardView>
        </com.ritesh.ratiolayout.RatioRelativeLayout>




    </GridLayout>

    <Button
        android:id="@+id/asa_continue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Hoàn thành"
        app:cornerRadius="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:text="Hãy chọn ít nhất 2 tấm ảnh xinh đẹp nhất trong những tấm ảnh xinh đẹp để mọi người cùng soi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listImage" />


</androidx.constraintlayout.widget.ConstraintLayout>